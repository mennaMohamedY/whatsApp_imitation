<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="vm"
            type="com.example.chat.addroom.AddRoomViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#EEE6F1"
        tools:context=".addroom.ProfileFragment">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/white"
            android:id="@+id/tolbar"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="Profile"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_exit_to_app_24"
                android:layout_gravity="right"
                android:id="@+id/exit_app"
                android:layout_marginRight="7dp"/>
        </androidx.appcompat.widget.Toolbar>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/tolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/tolbar"
                app:layout_constraintBottom_toBottomOf="parent"
                android:orientation="vertical">
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tolbar"
                    android:orientation="horizontal"
                    android:background="#6E6B6B"/>
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:theme="@style/Circular"
                    android:src="@drawable/ic_baseline_person_24"
                    android:layout_margin="10dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:id="@+id/pp"
                    SetABackground="@{vm.profilepic}"

                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Edit"
                    android:textStyle="bold"
                    android:textSize="21sp"
                    android:textColor="#3456D1"
                    android:layout_marginTop="4dp"
                    android:id="@+id/edit"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/edit"
                    android:orientation="horizontal"
                    android:background="#6E6B6B"
                    android:layout_marginTop="10dp"
                    android:id="@+id/view2"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view2"
                    android:text="NAME"
                    android:textColor="@color/black"
                    android:layout_marginTop="21dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="3dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/edit"
                    android:orientation="horizontal"
                    android:background="#6E6B6B"
                    android:layout_marginTop="2dp"
                    android:id="@+id/viewname"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="@color/white"
                    android:text="@={vm.username}"
                    android:id="@+id/name"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/edit"
                    android:orientation="horizontal"
                    android:background="#6E6B6B"
                    android:id="@+id/viewnamen"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view2"
                    android:text="Enter your name and add an optional profile picture"
                    android:layout_marginTop="7dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="7dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view2"
                    android:text="ABOUT"
                    android:textColor="@color/black"
                    android:layout_marginTop="12dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="7dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/edit"
                    android:orientation="horizontal"
                    android:background="#6E6B6B"
                    android:layout_marginTop="3dp"
                    android:id="@+id/viewAbout"
                    />
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="@color/white"
                    android:text="@={vm.status}"
                    android:id="@+id/status"
                    android:textColor="@color/black"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/edit"
                    android:orientation="horizontal"
                    android:background="#6E6B6B"
                    android:id="@+id/viewaboutt"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view2"
                    android:text="PHONE NUMBER"
                    android:textColor="@color/black"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginBottom="7dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/edit"
                    android:orientation="horizontal"
                    android:background="#6E6B6B"
                    android:layout_marginTop="3dp"
                    android:id="@+id/viewphone"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp"
                    android:background="@color/white"
                    android:id="@+id/phone"
                    android:textColor="@color/black"
                    android:text="@={vm.phonenum}"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/edit"
                    android:orientation="horizontal"
                    android:background="#6E6B6B"
                    android:id="@+id/viewphonee"
                    />


            </LinearLayout>

        </ScrollView>





    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>